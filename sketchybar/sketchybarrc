BLUE=0xFF1E6E77
ORANGE=0xFFCC7B6E
PINK=0xFFD7448A
RED=0xFFCE3A5B
GREEN=0xFF638989

# main bar & defaults
sketchybar --bar height=30        \
                 margin=12        \
                 y_offset=5       \
                 padding_left=0   \
                 padding_right=0  \
                 color=0x00000000

sketchybar --default updates=when_shown                             \
                     icon.color=0xFFFFFFFF                          \
                     label.font="Hack Nerd Font:Bold:14.0" \
                    icon.font="sketchybar-app-font:Normal:14.0" \
                     background.color=0x00000000                    \
                     y_offset=0

# ~~ left items ~~
# update defaults
sketchybar --default                                                \
                     background.color=0xEB1e1e2e                    \
                     blur_radius=2                                  \
                     background.corner_radius=15                    \
                     background.height=30                           \
                     icon.padding_left=12                           \
                     icon.padding_right=4                           \
                     label.padding_left=4                           \
                     label.padding_right=12                         \
                     background.padding_left=4

# ~~ center items ~~

# app title
sketchybar --add item title center                                  \
           --set      title label.padding_left=12                   \
                            label="Title"                           \
                            background.padding_left=0               \
                            icon.padding_left=12                     \
                            icon.padding_right=0                    \
                            script='./plugins/title.sh'             \
                            background.border_color=0xFFD3CDC5      \
                            # update_freq=1                           \
                            # scroll_texts=on                         \
                            # label.scroll_duration=200

sketchybar --subscribe title front_app_switched

# ~~ right items ~~

# time
sketchybar --add item time right                                    \
           --set      time icon=󱑎                                   \
                           icon.color=$BLUE                       \
                           background.border_color=$BLUE          \
                           label="$(date '+%I:%M %p')"              \
                           script='./plugins/time.sh'               \
                           update_freq=1

# date
sketchybar --add item date right                                    \
           --set      date icon=󱨰                                   \
                           icon.color=$GREEN                        \
                           background.border_color=$GREEN            \
                           label="$(date '+%a %b %d')"              \
                           script='./plugins/date.sh'               \
                           update_freq=10

# battery
sketchybar --add item battery right                                 \
           --set      battery icon=                                \
                              icon.color=$RED                   \
                              background.border_color=$RED       \
                              label="--%"                           \
                              script='./plugins/battery.sh'         \
                              update_freq=20


sketchybar --add alias "Control Center,WiFi" right \
           --set       "Control Center,WiFi" alias.color="0xFFFFFFFF"
sketchybar --add alias "Stats,Network_speed" right \
           --set       "Stats,Network_speed" alias.color="0xFFFFFFFF"
sketchybar --add alias "EVKey,Item-0" right \
           --set       "EVKey,Item-0" alias.color="0xFFFFFFFF"

# finish config
sketchybar --hotload on
sketchybar --update
